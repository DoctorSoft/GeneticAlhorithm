@using Core.MVC.PlayerVsMonkeyBot.Models
@using Core.TicTacToe.Constants
@model Core.MVC.PlayerVsMonkeyBot.Models.PlayerVsMonkeyBotMakeBotStepCommandResult

@{
    ViewBag.Title = "MakeBotStep";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts
{
    <script type="text/javascript">

        $(document).ready(function() {
            var delay = 100; //Your delay in milliseconds
            setTimeout(function() {
                 window.location = "@Url.Action("MakeMonkeyBotStep", new PlayerVsMonkeyBotMakeBotStepCommand {GameId = @Model.GameId})";
            }, delay);
        });

    </script>
}

<h2>StatisticBot Vs MonkeyBot</h2>

@for (var x = 0; x < @Model.CellSize; x++)
{
    for (var y = 0; y < @Model.CellSize; y++)
    {
        <a class="btn btn-default" style="width: 50px; height: 50px; font-size: 40px; vertical-align: central">
            @if (@Model.GameField[x, y] == CellCondition.Circle)
            {
                <span>O</span>
            }

            @if (@Model.GameField[x, y] == CellCondition.Cross)
            {
                <span>X</span>
            }
        </a>
    }
    <br />
}
