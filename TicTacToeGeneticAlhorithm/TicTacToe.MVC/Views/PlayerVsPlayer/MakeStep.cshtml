
@{
    ViewBag.Title = "MakeStep";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using Core.MVC.PlayerVsPlayer.Models
@using Core.TicTacToe.Constants
@model Core.MVC.PlayerVsPlayer.Models.PlayerVsPlayerMakeStepCommandResult

<h2>Player Vs Player</h2>

@for (var x = 0; x < @Model.CellSize; x++)
{
    for (var y = 0; y < @Model.CellSize; y++)
    {
        <a href="@Url.Action("MakeStep", "PlayerVsPlayer", new PlayerVsPlayerMakeStepCommand { X = x, Y = y, GameId = @Model.GameId })" class="btn btn-default" style="width: 50px; height: 50px">
            @if (@Model.GameField[x, y] == CellCondition.Circle)
            {
                <span>O</span>
            }

            @if (@Model.GameField[x, y] == CellCondition.Cross)
            {
                <span>X</span>
            }
        </a>
    }
    <br />
}

