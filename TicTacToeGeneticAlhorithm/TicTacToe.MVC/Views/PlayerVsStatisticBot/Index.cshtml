
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using Core.MVC.PlayerVsStatisticBot.Models
@using Core.TicTacToe.Constants
@model Core.MVC.PlayerVsStatisticBot.Models.PlayerVsStatisticBotNewGameCommandResult

<h2>Player Vs Statistic bot</h2>

@for (var x = 0; x < @Model.CellSize; x++)
{
    for (var y = 0; y < @Model.CellSize; y++)
    {
        <a href="@Url.Action("MakeStep", "PlayerVsStatisticBot", new PlayerVsStatisticBotMakeStepCommand { X = x, Y = y, GameId = @Model.GameId })" class="btn btn-default" style="width: 50px; height: 50px; font-size: 40px; vertical-align: central">
            @if (@Model.GameField[x, y] == CellCondition.Circle)
            {
                <span>O</span>
            }

            @if (@Model.GameField[x, y] == CellCondition.Cross)
            {
                <span>X</span>
            }
        </a>
    }
    <br />
}