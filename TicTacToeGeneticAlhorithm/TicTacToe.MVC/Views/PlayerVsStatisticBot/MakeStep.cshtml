@using Core.MVC.PlayerVsStatisticBot.Models
@using Core.TicTacToe.Constants
@model PlayerVsStatisticBotMakeStepCommandResult

@{
    ViewBag.Title = "MakeStep";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts
{
    <script type="text/javascript">

        $(document).ready(function() {
            var delay = 1000; //Your delay in milliseconds
            setTimeout(function() {
                 window.location = "@Url.Action("MakeBotStep", new PlayerVsStatisticBotMakeBotStepCommand {GameId = @Model.GameId})";
            }, delay);
        });

    </script >
}

<h2>Player Vs StatisticBot</h2>

@for (var x = 0; x < @Model.CellSize; x++)
{
    for (var y = 0; y < @Model.CellSize; y++)
    {
        <a class="btn btn-default" style="width: 50px; height: 50px; font-size: 40px; vertical-align: central">
            @if (@Model.GameField[x, y] == CellCondition.Circle)
            {
                <span>O</span>
            }

            @if (@Model.GameField[x, y] == CellCondition.Cross)
            {
                <span>X</span>
            }
        </a>
    }
    <br />
}



